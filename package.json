{
  "name": "stock-app",
  "version": "0.0.0",
  "description": "Sistema de Stock para escritorio",        
  "author": "White Owl Tech",                               
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:web": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:stock-app": "node dist/stock-app/server/server.mjs",
    "build:electron": "ng build --base-href ./",
    "electron": "ng build --base-href ./ &&  electron .",
    "dist": "ng build --base-href ./ && electron-builder"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.1",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "concurrently": "^9.2.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.whiteowltech.stockapp",
    "productName": "StockApp",
    "files": [
      "dist/stock-app/browser/**/*",
      "electron/**/*","package.json"    
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "win": {
      "icon": "electron/icon.ico",
      "target": "nsis"
    }
  }
}
